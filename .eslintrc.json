{
    "parserOptions": {
        "ecmaVersion": 8,
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true
        }
    },
    "env": {
        "browser": true
    },
    "extends": ["airbnb-base"],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "no-plusplus": [
            "error",
            {
                "allowForLoopAfterthoughts": true
            }
        ],
        "no-console": [
            "error",{
                "allow": [
                    "warn",
                    "error"
                ]
            }
        ]
    }
}
